<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCompanyName"
            android:text="Company Name"
            android:textSize="19sp"
            android:textColor="@color/colorDarkGrey"/>

        <View
            android:layout_width="200dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorLightGrey"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Working days:"
            android:layout_marginTop="25dp"
            android:textSize="11sp"
            android:textColor="@color/colorDarkGrey"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:id="@+id/tvDays"
            android:background="@drawable/border_rectangle_2"
            android:layout_marginTop="4dp"
            android:padding="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Morning: "
            android:layout_marginTop="20dp"
            android:textColor="@color/colorDarkGrey"
            android:textSize="11sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From: "
                    android:textSize="14sp"
                    android:textColor="@color/colorDarkGrey"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvMorningStartTime"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/colorDarkGrey"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical|end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To: "
                    android:textSize="14sp"
                    android:textColor="@color/colorDarkGrey"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:id="@+id/tvMorningToTime"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/colorDarkGrey"/>


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Afternoon: "
            android:layout_marginTop="20dp"
            android:textColor="@color/colorDarkGrey"
            android:textSize="11sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From: "
                    android:textSize="14sp"
                    android:textColor="@color/colorDarkGrey"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:id="@+id/tvNoonStart"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/colorDarkGrey"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical|end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To: "
                    android:textSize="14sp"
                    android:textColor="@color/colorDarkGrey"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:id="@+id/tvNoonTo"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/colorDarkGrey"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description: "
            android:layout_marginTop="20dp"
            android:textColor="@color/colorDarkGrey"
            android:textSize="11sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:minHeight="100dp"
            android:padding="13dp"
            android:textColor="@color/colorDarkGrey"
            android:background="@drawable/border_rectangle_2"
            android:gravity="start"
            android:id="@+id/tvDescription"/>

    </LinearLayout>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:tint="@color/colorLightGrey"
        android:background="@android:color/transparent"
        android:padding="1dp"
        android:id="@+id/btnCancel"
        android:scaleType="fitCenter"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"/>

</RelativeLayout>