<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ChatActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/chat_background"
        android:scaleType="centerCrop"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_back"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:padding="7dp"
                android:id="@+id/goBack"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:id="@+id/tvGroupName"
                    android:textSize="17sp"
                    android:textColor="@color/colorDarkGrey"/>

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="12dp"
                    android:id="@+id/btnInfo"
                    android:src="@drawable/ic_information"
                    android:layout_alignParentEnd="true"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:padding="4dp"
                    app:tint="@color/colorDarkGrey"/>

            </RelativeLayout>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:id="@+id/swipe_refresh"
        android:layout_marginTop="10dp"
        android:layout_below="@id/toolbar"
        android:layout_height="match_parent"
        android:layout_above="@id/linear">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_reply"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:cardElevation="0dp"
        android:visibility="gone"
        android:layout_above="@id/linear"
        android:layout_marginStart="56dp"
        android:layout_marginTop="3dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorSilverLight"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:background="@color/colorOrange" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvReplyUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UserName"
                    android:textColor="@color/colorOrange"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvReplyMessageType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UserName"
                    android:maxLines="1"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="13sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/replyImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            app:tint="@color/colorDarkGrey"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_gravity="end"
            android:padding="4dp"
            android:id="@+id/btnCloseReply"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:id="@+id/linear"
        android:paddingBottom="17dp"
        android:paddingTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/yellow_circle"
            android:src="@drawable/attached"
            android:scaleType="fitCenter"
            app:tint="@android:color/white"
            android:padding="8dp"
            android:id="@+id/btnAdd"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/border_rectangle_2"
            android:layout_marginLeft="12dp"
            android:hint="Type here.."
            android:textSize="14sp"
            android:maxHeight="120dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/colorDarkGrey"
            android:padding="15dp"
            android:id="@+id/etTypeHere"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical">

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/yellow_circle"
                android:src="@drawable/mic"
                app:tint="@android:color/white"
                android:scaleType="fitCenter"
                android:padding="6dp"
                android:id="@+id/btnRecord"/>

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/yellow_circle"
                android:src="@drawable/ic_send"
                android:scaleType="fitCenter"
                android:padding="9dp"
                android:id="@+id/btnSend"/>

        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_users_to_mention"
        android:layout_above="@id/linear"
        android:layout_marginStart="25dp"
        android:visibility="gone"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/progressBar"/>

</RelativeLayout>