                <!--            <EditText-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:background="@drawable/border_rectangle_2"-->
                <!--                android:layout_marginTop="10dp"-->
