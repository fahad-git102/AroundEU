                <!--                android:paddingStart="14dp"-->
                <!--                android:paddingEnd="14dp"-->
                <!--                android:textColor="@color/colorDarkGrey"-->
                <!--                android:id="@+id/etIDLegalRepresentative"/>-->

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_rectangle_2"
                    android:layout_marginTop="10dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:hint="Website"
                    android:textSize="14sp"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:textColor="@color/colorDarkGrey"
                    android:id="@+id/etwebsite"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_rectangle_2"
                    android:layout_marginTop="10dp"
                    android:paddingTop="13dp"
                    android:minHeight="100dp"
                    android:gravity="start"
                    android:paddingBottom="13dp"
                    android:hint="Company description"
                    android:textSize="14sp"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:textColor="@color/colorDarkGrey"
                    android:id="@+id/etCompanyDescription"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_rectangle_2"
                    android:layout_marginTop="10dp"
                    android:paddingTop="13dp"
                    android:minHeight="100dp"
                    android:gravity="start"
                    android:paddingBottom="13dp"
                    android:hint="Company's Responsibility"
                    android:textSize="14sp"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:textColor="@color/colorDarkGrey"
                    android:id="@+id/etCompanyResponsibility"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_rectangle_2"
                    android:layout_marginTop="10dp"
                    android:paddingTop="13dp"
                    android:gravity="start"
                    android:paddingBottom="13dp"
                    android:hint="Tasks of Students"
                    android:textSize="14sp"
                    android:minHeight="100dp"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:textColor="@color/colorDarkGrey"
                    android:id="@+id/etStudentsTasks"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:backgroundTint="@color/colorMain"
                    android:text="Save"
                    android:id="@+id/btnSave"/>


            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorDarkFaded"
        android:visibility="gone"
        android:id="@+id/progress">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

