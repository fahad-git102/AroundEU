<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_background"
    tools:context=".activities.MakeCordinatorActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back"
            android:id="@+id/goBack"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:padding="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make Co-ordinator"
            android:layout_centerInParent="true"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@color/colorDarkGrey"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select any teacher to make co-ordinator"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textSize="14sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/colorLightGrey"/>

    <SearchView
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_rectangle_2"
        android:layout_marginStart="20dp"
        app:queryHint="Search teachers here..."
        android:queryHint="Search teachers here..."
        app:defaultQueryHint="Search teachers here..."
        android:layout_marginEnd="20dp"
        android:id="@+id/searchView"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/recycler_teachers"/>

</LinearLayout>